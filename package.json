{
    "name": "@chocolateboy/uncommonjs",
    "version": "0.0.1",
    "description": "A minimal viable shim for CommonJS' module.exports",
    "unpkg": "index.js",
    "jsdelivr": "index.js",
    "main": "index.js",
    "repository": "https://github.com/chocolateboy/uncommonjs",
    "author": "chocolateboy",
    "license": "Artistic-2.0",
    "scripts": {
        "build": "terser --compress --mangle -o index.min.js < index.js",
