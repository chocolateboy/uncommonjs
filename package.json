{
    "name": "@chocolateboy/uncommonjs",
    "version": "2.0.2",
    "description": "A minimum viable shim for module.exports",
    "author": "chocolateboy",
    "repository": "https://github.com/chocolateboy/uncommonjs",
    "license": "Artistic-2.0",
    "main": "index.js",
    "jsdelivr": "index.min.js",
    "unpkg": "index.min.js",
    "scripts": {
        "build": "terser --compress passes=2,reduce_vars=false,keep_fnames=true --mangle reserved=['require'] -o index.min.js < index.js",
        "build:doc": "toc-md README.md",
        "prepublishOnly": "run-s build:doc test",
        "test": "run-s build test:run",
        "test:run": "ava --verbose --serial test.js"
    },
    "files": [
        "index.js",
        "index.min.js"
    ],
    "devDependencies": {
        "ava": "^3.13.0",
        "npm-run-all": "^4.1.5",
        "terser": "^5.5.1",
        "toc-md-alt": "^0.4.1"
    },
    "keywords": [
        "adapter",
        "collect",
        "collector",
        "commonjs",
        "export",
        "exporter",
        "exports",
        "fake",
        "gather",
        "gatherer",
        "greasemonkey",
        "module",
        "quickjs",
        "require",
        "shim",
        "spidermonkey",
        "stub",
        "tampermonkey",
        "userscript",
        "userscripts",
        "violentmonkey"
    ]
}
